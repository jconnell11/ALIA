// OP 7: "If someone named is not visible then say where did you go whoever"
  trig:   
    NOTE[  hq-1 -lex-  visible 
                -neg-  1
                -hq--> agt-1 
          ako-1 -lex-  person 
                -ako-> agt-1 
          ref-1 -ref-> agt-1 ]
  ---------------
      DO[ act-1 -lex-   say 
                -dest-> agt-1
                -obj--> txt-1
          txt-1 -str-   where did you go ?0? ]


// OP 8: "If someone named is not visible then say whoever please come back"
  trig:   
    NOTE[  hq-1 -lex-  visible 
                -neg-  1
                -hq--> agt-1 
          ako-1 -lex-  person 
                -ako-> agt-1 
          ref-1 -ref-> agt-1 ]
  ---------------
      DO[ act-1 -lex-   say 
                -dest-> agt-1
                -obj--> txt-1
          txt-1 -str-   ?0 please come back ]


// --------------------------------------

// OP 9: "Before saying something to someone look at them"
  trig:   
    ANTE[ act-1 -lex-   say
                -obj--> txt-1
                -dest-> dude-1
          ako-1 -lex-   person 
                -ako--> dude-1 ]
  ---------------
      DO[ act-2 -lex-  look
          loc-1 -lex-  at
                -loc-> act-2
                -wrt-> dude-1 ]


// --------------------------------------

// OP 10: "If someone becomes visible hail them then approach them."
  trig:   
    NOTE[  hq-1 -lex-  visible 
                -hq--> agt-1 
          ako-1 -lex-  person 
                -ako-> agt-1 ]
  ---------------
      DO[ act-2 -lex-  hail
                -obj-> agt-1 ]
      DO[ act-3 -lex-  approach
                -obj-> agt-1 ] 


