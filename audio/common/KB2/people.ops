      DO[ act-1 -lex-   ask
                -dest-> dude-1
                -obj--> act-2 
          act-2 -lex-   wait 
                -agt->  dude-1 ]
  ---------------
      DO[ act-3 -lex-   say
                -dest-> dude-1
                -obj--> txt-1
          txt-1 -str-   wait for me ]


