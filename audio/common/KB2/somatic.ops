// Homeostasis actions for somatic states
// ================================================

OP 1 - "If you are awake then announce that and also look around"
  trig:
  NOTE[  hq-1 -lex-  awake
              -hq--> obj-1
        obj-1 -lex-  me ]
-----------------
   >>>
      DO[ act-1 -lex-  announce
                -obj-> hq-1 ]
   +++
      DO[ act-2 -lex-  look
          dir-1 -lex-  around
                -dir-> act-2 ]
   <<<


OP 2 - "If you are tired announce that"
  trig:
  NOTE[  hq-1 -lex-  tired
              -hq--> obj-1
        obj-1 -lex-  me ]
-----------------
    DO[ act-1 -lex-  announce
              -obj-> hq-1 ]


OP 3 - "If you are overwhelmed announce that"
  trig:
  NOTE[  hq-1 -lex-  overwhelmed
              -hq--> obj-1
        obj-1 -lex-  me ]
-----------------
    DO[ act-2 -lex-  announce
              -obj-> hq-1 ]


OP 4 - "If you are lonely then announce that and also look around"
