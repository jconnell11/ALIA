OP 5 - "If you are lonely and someone becomes visible then hail them and approach them."
  trig:   
  NOTE[  hq-1 -lex-  lonely
              -hq--> agt-1
        agt-1 -lex-  me
         hq-1 -lex-  visible 
              -hq--> agt-2 
        ako-1 -lex-  person 
              -ako-> agt-2 ]
---------------
    DO[ act-2 -lex-  hail
              -obj-> agt-2 ]
    DO[ act-3 -lex-  approach
              -obj-> agt-2 ] 


OP 6 - "To hail someone say finally, someone to play with"
  trig:
    DO[ act-1 -lex-  hail
              -obj-> agt-1 ]
---------------
    DO[ act-3 -lex-   say
              -dest-> agt-1
              -obj--> txt-1
        txt-1 -str-   finally, someone to play with ]


