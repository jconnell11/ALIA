// basic commands understood by ELI robot base
// ================================================

OP 1 - "To freeze ..."
  trig:   
    DO[ act-1 -lex-  freeze ] 
---------------
   FCN[ fcn-1 -lex-  ball_stop 
              -arg-> act-1 ]


// --------------------------------------

OP 2 - "To step ..."
  trig:   
    DO[ act-1 -lex-  step ]
---------------
   FCN[ fcn-1 -lex-  ball_drive 
              -arg-> act-1 ]


OP 3 - "To move ..."
  trig:   
    DO[ act-1 -lex-  move ]
---------------
   FCN[ fcn-1 -lex-  ball_drive 
              -arg-> act-1 ]


OP 4 - "To drive ..."
  trig:   
    DO[ act-1 -lex-  drive ]
---------------
   FCN[ fcn-1 -lex-  ball_drive 
              -arg-> act-1 ]


// --------------------------------------

OP 5 - "To turn ..."
  trig:   
    DO[ act-1 -lex-  turn ]
---------------
   FCN[ fcn-1 -lex-  ball_turn 
              -arg-> act-1 ]


OP 6 - "To rotate ..."
  trig:   
    DO[ act-1 -lex-  rotate ]
---------------
   FCN[ fcn-1 -lex-  ball_turn 
              -arg-> act-1 ]


OP 7 - "To turn around rotate"
  trig:   
    DO[ act-1 -lex-  turn 
        dir-1 -lex-  around
              -dir-> act-1 ]
---------------
    DO[ act-2 -lex-  rotate ]


OP 8 - "To spin ..."
  trig:   
    DO[ act-1 -lex-  spin ]
---------------
   FCN[ fcn-1 -lex-  ball_turn 
              -arg-> act-1 ]


// --------------------------------------

OP 9 - "To raise the arm ..."
  trig:
    DO[ act-1 -lex-  raise
              -obj-> obj-1
        ako-1 -lex-  arm
              -ako-> obj-1 ]
---------------
   FCN[ fcn-1 -lex-  ball_lift 
              -arg-> act-1 ]


OP 10 - "To lower the arm ..."
