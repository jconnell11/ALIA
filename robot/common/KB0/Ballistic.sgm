// terms associated with "Ballistic" ops and rules
// ================================================

// singular nouns - mass nouns like "a rice" belong in =[AKO-M] instead

=[AKO]
  arm
  hand
  neck
  body
  base
  inch
  foot
  centimeter
  meter
  degree


// adjective

=[HQ]
  tired
  broken


// -----------------------------------------

// imperative verbs

=[ACT]
  freeze
  step
  move
  drive
  turn
  turn
  rotate
  spin
  raise
  lower
  open
  release
  close
  hold
  extend
  retract
  shift
  reset
  point
  twist
  look
  scan
  gaze


// imperative verbs requiring object and location or direction

=[ACT-2]


// modifier

=[MOD]
  quickly
  slowly
  visually


// ================================================

// irregular morphologies (npl, acomp, asup, vpres, vprog, vpast)

=[XXX-morph]
  foot * npl = feet
  open * vprog = opening
  open * vpast = opened
  spin * vpast = spun
  hold * vpast = held
  reset * vpast = reset
  tired * acomp = more tired
  tired * asup  = most tired
  freeze * vpast = froze
  drive * vpast = drove
  spin * vpast = spun
  

