// ========================================

OP 23 - "To scan right look left then look right very slowly"
  trig:
    DO[ fcn-1 -lex-  scan
              -fcn-> act-1
        dir-1 -lex-  right
              -dir-> act-1 ]
-----------------
    DO[ fcn-2 -lex-  look
              -fcn-> act-2
        dir-2 -lex-  left
              -dir-> act-2 ]
    DO[ fcn-3 -lex-  look
              -fcn-> act-3
        dir-3 -lex-  right
              -dir-> act-3 
        mod-3 -lex-  slowly
              -mod-> act-3 
        deg-3 -lex-  very
              -deg-> mod-3 ]


OP 24 - "To scan left look right then look left very slowly"
  trig:
    DO[ fcn-1 -lex-  scan
              -fcn-> act-1
        dir-1 -lex-  left
              -dir-> act-1 ]
-----------------
    DO[ fcn-2 -lex-  look
              -fcn-> act-2
        dir-2 -lex-  right
              -dir-> act-2 ]
    DO[ fcn-3 -lex-  look
              -fcn-> act-3
        dir-3 -lex-  left
              -dir-> act-3 
        mod-3 -lex-  slowly
              -mod-> act-3 
        deg-3 -lex-  very
              -deg-> mod-3 ]


OP 25 - "To visually search upwards scan left far down then scan down to the right then scan left slightly down"
  trig:
    DO[ fcn-1 -lex-  search
              -fcn-> act-1
        mod-1 -lex-  visually
              -mod-> act-1
        dir-1 -lex-  upwards
              -dir-> act-1 ]
-----------------
    DO[ fcn-2 -lex-  scan
              -fcn-> act-2
        dir-2 -lex-  left
              -dir-> act-2
        dir-3 -lex-  down
              -dir-> act-2 
        deg-3 -lex-  far
              -deg-> dir-3 ] 
    DO[ fcn-3 -lex-  scan
              -fcn-> act-3
        dir-4 -lex-  down
              -dir-> act-3
        dir-5 -lex-  to the right
              -dir-> act-3 ]
    DO[ fcn-4 -lex-  scan
              -fcn-> act-4
        dir-6 -lex-  left
              -dir-> act-4 
        dir-7 -lex-  down
              -dir-> act-4 
        deg-4 -lex-  slightly
              -deg-> dir-7 ] 


OP 26 - "To visually search downwards scan slightly up to the left then scan level right then scan slightly down to the left"
  trig:
    DO[ fcn-1 -lex-  search
              -fcn-> act-1
        mod-1 -lex-  visually
              -mod-> act-1
        dir-1 -lex-  downwards
              -dir-> act-1 ]
-----------------
    DO[ fcn-2 -lex-  scan
              -fcn-> act-2
        dir-2 -lex-  up
              -dir-> act-2
        deg-2 -lex-  slightly
              -deg-> dir-2
        dir-3 -lex-  to the left
              -dir-> act-2 ]
    DO[ fcn-3 -lex-  scan
              -fcn-> act-3
        dir-4 -lex-  level
              -dir-> act-3
        dir-5 -lex-  right
              -dir-> act-3 ]
    DO[ fcn-4 -lex-  scan
              -fcn-> act-4
        dir-6 -lex-  down
              -dir-> act-4
        deg-3 -lex-  slightly
              -deg-> dir-6
        dir-7 -lex-  to the left
              -dir-> act-4 ]


// -------------------------------------------

OP 27 - "To gaze look"
  trig:
    DO[ fcn-1 -lex-  gaze 
              -fcn-> act-1 ]
-----------------
    DO[ fcn-2 -lex-  look 
              -fcn-> act-2 ]


OP 28 - "To scan to the right scan right"
  trig:
    DO[ fcn-1 -lex-  scan
              -fcn-> act-1
        dir-1 -lex-  to the right
              -dir-> act-1 ]
-----------------
    DO[ fcn-2 -lex-  scan
              -fcn-> act-2
        dir-2 -lex-  right
              -dir-> act-2 ]


OP 29 - "To scan to the left scan left"
  trig:
    DO[ fcn-1 -lex-  scan
              -fcn-> act-1
        dir-1 -lex-  to the left
              -dir-> act-1 ]
-----------------
    DO[ fcn-2 -lex-  scan
              -fcn-> act-2
        dir-2 -lex-  left
              -dir-> act-2 ]


OP 30 - "To look around visually search downward"
  trig:
     DO[ fcn-1 -lex-  look
               -fcn-> act-1
         dir-1 -lex-  around
               -dir-> act-1 ]
-----------------
     DO[ fcn-2 -lex-  search
               -fcn-> act-2
         mod-2 -lex-  visually
               -mod-> act-2
         dir-2 -lex-  downwards
               -dir-> act-2 ]


