// irregular morphologies (npl, acomp, asup, vpres, vprog, vpast)

=[XXX-morph]
  medium * acomp = more medium
  medium * asup = most medium
  far * acomp = farther
  far * asup  = farthest
  compact * acomp = more compact
  compact * asup = most compact
  orange * acomp = oranger
  orange * asup  = orangest
  yellow * acomp = yellower
  yellow * asup  = yellowest
  blue * acomp = bluer
  blue * asup  = bluest
  purple * acomp = purpler
  purple * asup  = purplest
  visible * acomp = more visible
  visible * asup  = most visible



