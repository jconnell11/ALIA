// terms associated with "Ballistic" ops and rules
// ================================================

// singular nouns - mass nouns like "a rice" belong in =[AKO-M] instead

=[AKO]
  arm
  hand
  head


// adjective

=[HQ]
  tired


// -----------------------------------------

// modifier

=[MOD]
  quickly
  slowly


// direction

=[DIR]
  forward
  forwards
  backward
  backwards
  clockwise
  counterclockwise
  right 
  left
  up 
  down
  level
  straight
  vertical
  horizontal
  sideways
  around
  in


// imperative verbs

=[ACT]
  freeze
  step
  move
  drive
  turn
  turn
  rotate
  spin
  raise
  lower
  open
  release
  close
  hold
  extend
  shift
  reset
  point
  twist
  look


// imperative verbs requiring object and location or direction

=[ACT-2]
  tuck


// ================================================

// irregular morphologies (npl, acomp, asup, vpres, vprog, vpast)

=[XXX-morph]
  open * vprog = opening
  open * vpast = opened
  spin * vpast = spun
  hold * vpast = held
  reset * vpast = reset
  tired * acomp = more tired
  tired * asup  = most tired
  freeze * vpast = froze
  drive * vpast = drove
  spin * vpast = spun
  

