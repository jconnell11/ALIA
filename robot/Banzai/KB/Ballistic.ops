               -arg-> act-1 ]


// OP 12: "To close the hand ..."
  trig:
     DO[ act-1 -lex-  close
               -obj-> obj-1 
         ako-1 -lex-  hand
               -ako-> obj-1 ]
  ---------------
    FCN[ fcn-1 -lex-  ball_grip 
               -arg-> act-1 ]


// OP 13: "To hold something ..."
  trig:
     DO[ act-1 -lex-  hold
               -obj-> obj-1 ]
  ---------------
