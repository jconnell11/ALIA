// basic commands understood by ELI robot base
// ================================================

// OP 1: "To freeze ..."
  trig:   
      DO[ act-1 -lex-  freeze ] 
  ---------------
     FCN[ fcn-1 -lex-  ball_stop 
                -arg-> act-1 ]


// --------------------------------------

// OP 2: "To step ..."
  trig:   
      DO[ act-1 -lex-  step ]
  ---------------
     FCN[ fcn-1 -lex-  ball_drive 
                -arg-> act-1 ]


// OP 3: "To move ..."
  trig:   
      DO[ act-1 -lex-  move ]
  ---------------
     FCN[ fcn-1 -lex-  ball_drive 
                -arg-> act-1 ]


// OP 4: "To drive ..."
  trig:   
      DO[ act-1 -lex-  drive ]
  ---------------
     FCN[ fcn-1 -lex-  ball_drive 
                -arg-> act-1 ]


// --------------------------------------

// OP 5: "To turn in some direction ..."
  trig:   
      DO[ act-1 -lex-  turn 
          dir-1 -dir-> act-1 ]
  ---------------
     FCN[ fcn-1 -lex-  ball_turn 
                -arg-> act-1 ]


// OP 6: "To rotate ..."
  trig:   
      DO[ act-1 -lex-  rotate ]
  ---------------
     FCN[ fcn-1 -lex-  ball_turn 
                -arg-> act-1 ]


// OP 7: "To spin around ..."
  trig:   
      DO[ act-1 -lex-  spin around ]
  ---------------
     FCN[ fcn-1 -lex-  ball_turn 
                -arg-> act-1 ]


// --------------------------------------

// OP 8: "To raise the arm ..."
  trig:
     DO[ act-1 -lex-  raise
               -obj-> obj-1
         ako-1 -lex-  arm
               -ako-> obj-1 ]
  ---------------
    FCN[ fcn-1 -lex-  ball_lift 
               -arg-> act-1 ]


// OP 9: "To lower the arm ..."
  trig:
     DO[ act-1 -lex-  lower
               -obj-> obj-1
         ako-1 -lex-  arm
               -ako-> obj-1 ]
  ---------------
    FCN[ fcn-1 -lex-  ball_lift 
               -arg-> act-1 ]


// --------------------------------------

// OP 10: "To open the hand ..."
  trig:
     DO[ act-1 -lex-  open
               -obj-> obj-1 
         ako-1 -lex-  hand
               -ako-> obj-1 ]
  ---------------
    FCN[ fcn-1 -lex-  ball_grip 
               -arg-> act-1 ]


// OP 11: "To release something ..."
  trig:
     DO[ act-1 -lex-  release
               -obj-> obj-1 ]
  ---------------
