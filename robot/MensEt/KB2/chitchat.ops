// Respond to speech acts posted by jhcGraphizer
// ================================================

OP 1 - "If someone hails you then acknowledge that"
  trig:
  NOTE[ fcn-1 -lex-   hail
              -fcn--> act-1
        act-1 -agt--> obj-1  
              -dest-> obj-2  
        obj-2 -lex-   me ]
-----------------
    DO[ fcn-2 -lex-  acknowledge
              -fcn-> act-2
        act-2 -obj-> act-1 ]


OP 2 - "To acknowledge when someone hails you say to them I'm here whoever"
  trig:
    DO[ fcn-1 -lex-   acknowledge
              -fcn--> act-1
        act-1 -obj--> act-2
        fcn-2 -lex-   hail
              -fcn--> act-2
        act-2 -agt--> obj-1  
              -dest-> obj-2  
        obj-2 -lex-   me ]
-----------------
    DO[ fcn-3 -lex-   say
              -fcn--> act-3
        act-3 -dest-> obj-1
              -obj--> txt-1
        txt-1 -str-   I'm here ?0 ]


