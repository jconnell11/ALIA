// respond to internal state changes
// ================================================

OP 1 - "If you are tired announce that"
  trig:
  NOTE[  hq-1 -lex-  tired
              -hq--> obj-1
        obj-1 -lex-  me ]
-----------------
    DO[ fcn-1 -lex-  announce
              -fcn-> act-1
        act-1 -obj-> hq-1 ]


OP 2 - "To announce that you are tired say Aww, come on, I'm so tired"
  trig:
    DO[ fcn-1 -lex-  announce
              -fcn-> act-1
        act-1 -obj-> hq-1 
         hq-1 -lex-  tired
              -hq--> obj-1
        obj-1 -lex-  me ]
-----------------
    DO[ fcn-2 -lex-  say
              -fcn-> act-2
        act-2 -obj-> txt-1
        txt-1 -str-  Aww, come on, I'm so tired ]


